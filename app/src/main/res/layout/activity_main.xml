<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/bg_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sacet_logo_bg"
            android:alpha="0.3"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#F1CB45"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_icon"
                android:backgroundTint="#F1CB45"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLAN YOUR HOLIDAY'S"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:fontFamily="@font/comic_neue_bold_italic"
                android:textColor="@color/black"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/header_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/sacet_logo_1"
                app:shapeAppearanceOverlay="@style/circular"
                android:layout_marginLeft ="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/sacet_banner"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:src="@drawable/sacet_banner"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/att_btn"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:backgroundTint="#F1CB45"
                android:shadowColor="@color/black"
                android:text="ATTENDENCE"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textAlignment="viewStart"
                android:drawableLeft="@drawable/attendence_logo"
                android:padding="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/comic_neue_bold_italic"
                app:shapeAppearanceOverlay="@style/circular"/>

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/calender_btn"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:backgroundTint="#F1CB45"
                android:shadowColor="@color/black"
                android:text="CALENDER"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textAlignment="viewStart"
                android:drawableLeft="@drawable/calender_icon"
                android:padding="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/comic_neue_bold_italic"
                app:shapeAppearanceOverlay="@style/circular"/>

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rTarget_btn"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:backgroundTint="#F1CB45"
                android:shadowColor="@color/black"
                android:text="REACH TARGET"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textAlignment="viewStart"
                android:drawableLeft="@drawable/reach_target_icon"
                android:padding="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/comic_neue_bold_italic"
                app:shapeAppearanceOverlay="@style/circular"/>

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/result_btn"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:backgroundTint="#F1CB45"
                android:shadowColor="@color/black"
                android:text="RESULT"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textAlignment="viewStart"
                android:drawableLeft="@drawable/result_icon"
                android:padding="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/comic_neue_bold_italic"
                app:shapeAppearanceOverlay="@style/circular"/>

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>